<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- 在excludes元素下指定的页面将不会由SiteMesh来装饰 -->
    <excludes>
    	<pattern>/admin/login.action</pattern>
    	<pattern>/admin/processLogin.action</pattern>
    	<pattern>/admin/showPhoto.*</pattern>
    	<pattern>/admin/popups/*</pattern>
    	<pattern>/admin/single*.action</pattern>
    	<pattern>/admin/multiple*.action</pattern>
    	<pattern>/showHouse*</pattern>
    	<pattern>/*.html</pattern>
    </excludes>

	<!-- 创建一个名为main的装饰器，该装饰器页面为main.jsp,
	     用于装饰pattern指定的URL的所有页面-->
    <decorator name="adminMain" page="adminMain.jsp">
        <pattern>/admin/*</pattern>
    </decorator>
    
    <decorator name="Main" page="Main.jsp">
        <pattern>/*</pattern>
    </decorator>

</decorators>